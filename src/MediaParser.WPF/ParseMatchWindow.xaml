                                                  Foreground="{StaticResource ForegroundBrush}"
                                                  BorderThickness="0"
                                                  Padding="8,6"
                                                  Margin="0,0,0,8"
                                                  FontSize="12">
                                            <ComboBox.Style>
                                                <Style TargetType="ComboBox">
                                                    <Setter Property="ItemsSource">
                                                        <Setter.Value>
                                                            <x:Array Type="core:MediaType" xmlns:core="clr-namespace:MediaParser.Core.Workflow;assembly=MediaParser.Core">
                                                                <core:MediaType>Series</core:MediaType>
                                                                <core:MediaType>Movie</core:MediaType>
                                                            </x:Array>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ComboBox.Style>
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        
                                        <!-- Buttons -->
                                        <StackPanel Orientation="Vertical" 
                                            Margin="0,8,0,0">
                                <Button Content="Parse" 
                                        Command="{Binding ParseMetadataCommand}"
                                        Background="{StaticResource PrimaryBrush}"
                                        Foreground="{StaticResource PrimaryForegroundBrush}"
                                        BorderThickness="0"
                                                    Padding="12,6"
                                                    FontSize="11"
                                        FontWeight="500"
                                                    Height="32"
                                                    HorizontalAlignment="Stretch"/>
                                            <Button Content="Clear"
                                                    Command="{Binding ClearMetadataCommand}"
                                                    Background="Transparent"
                                                    Foreground="{StaticResource MutedForegroundBrush}"
                                                    BorderThickness="1"
                                                    BorderBrush="{StaticResource BorderBrush}"
                                                    Padding="12,6"
                                                    FontSize="11"
                                                    Height="32"
                                                    Margin="0,8,0,0"
                                                    HorizontalAlignment="Stretch"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- è§£æžç»“æžœåŒºåŸŸ -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      PanningMode="VerticalFirst"
                                      HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                
                                <!-- Series Information -->
                                <Expander x:Name="SeriesExpander"
                                          IsExpanded="True"
                                          BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="0,0,0,1"
                                          Padding="0">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal" 
                                                   VerticalAlignment="Center" 
                                                   Margin="16,12">
                                            <TextBlock Text="ðŸ“„" FontSize="14"/>
                                            <TextBlock Text="Series Information" 
                                                       Foreground="{StaticResource ForegroundBrush}" 
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Expander.Header>
                                    <Expander.Content>
                                        <Border Padding="16">
                                            <StackPanel>
                                                <!-- Title -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Title:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Show.Title, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- OriginalTitle -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Original:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Show.OriginalTitle, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- SortTitle -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="SortTitle:" 
                                                               Foreground="{StaticResource MutedForegroundBrush}" 
                                                               FontSize="12" Width="70" VerticalAlignment="Center"/>
                                                    <TextBox Grid.Column="1" 
                                                             Text="{Binding Show.SortTitle, Mode=OneWay}"
                                                             Background="{StaticResource InputBrush}"
                                                             Foreground="{StaticResource ForegroundBrush}"
                                                             BorderThickness="0"
                                                             Padding="8,6"
                                                             FontSize="12"/>
                                                </Grid>
                                                
                                                <!-- Year -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Year:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Show.Year, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- Premiered -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Premiered:" 
                                                               Foreground="{StaticResource MutedForegroundBrush}" 
                                                               FontSize="12" Width="70" VerticalAlignment="Center"/>
                                                    <TextBox Grid.Column="1" 
                                                             Text="{Binding Show.Premiered, Mode=OneWay}"
                                                             Background="{StaticResource InputBrush}"
                                                             Foreground="{StaticResource ForegroundBrush}"
                                                             BorderThickness="0"
                                                             Padding="8,6"
                                                             FontSize="12"/>
                                                </Grid>
                                                
                                                <!-- Plot -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="Plot:" 
                                                               Foreground="{StaticResource MutedForegroundBrush}" 
                                                               FontSize="12" Width="70" VerticalAlignment="Top" Margin="0,8,0,0"/>
                                                    <TextBox Grid.Column="1" 
                                                             Text="{Binding Show.Plot, Mode=OneWay}"
                                                             Background="{StaticResource InputBrush}"
                                                             Foreground="{StaticResource ForegroundBrush}"
                                                             BorderThickness="0"
                                                             Padding="8,6"
                                                             FontSize="12"
                                                             MinHeight="80"
                                                             AcceptsReturn="True"
                                                             TextWrapping="Wrap"/>
                                                </Grid>
                                                
                                                <!-- Studio -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Studio:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Show.Studio, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- Director -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Director:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                     Text="{Binding Show.Director, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- Actors -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Actors:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                             Text="{Binding Show.Actors, Mode=OneWay, Converter={StaticResource ListToStringConverter}}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                <!-- Tags -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="Tags:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                             Text="{Binding Show.Tags, Mode=OneWay, Converter={StaticResource ListToStringConverter}}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>
                                    </Expander.Content>
                                </Expander>
                                
                                <!-- Episode Information -->
                                <Expander x:Name="EpisodeExpander"
                                          IsExpanded="True"
                                          BorderBrush="{StaticResource BorderBrush}"
                                          BorderThickness="0,0,0,1"
                                          Padding="0">
                                    <Expander.Header>
                                        <StackPanel Orientation="Horizontal" 
                                                   VerticalAlignment="Center" 
                                                   Margin="16,12">
                                            <TextBlock Text="ðŸ“„" FontSize="14"/>
                                            <TextBlock Text="Episode Information" 
                                                       Foreground="{StaticResource ForegroundBrush}" 
                                                       FontSize="13" FontWeight="SemiBold"
                                                       Margin="8,0,0,0"/>
