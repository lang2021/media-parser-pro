<Window x:Class="MediaParser.WPF.ParseMatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaParser.WPF"
        xmlns:vm="clr-namespace:MediaParser.WPF.ViewModels"
        xmlns:conv="clr-namespace:MediaParser.WPF.Converters"
        mc:Ignorable="d"
        Title="Parse &amp; Match - MediaParser Pro" 
        Height="700" Width="1100"
        Background="#FAFAFA">

    <Window.Resources>
        <ResourceDictionary>
            <!-- ==================== ä¸»é¢˜é¢œè‰²ï¼ˆåŒ¹é… desktop-app-uiï¼‰ ==================== -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#E5E5E5"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="#18181B"/>
            <SolidColorBrush x:Key="MutedForegroundBrush" Color="#71717A"/>
            <SolidColorBrush x:Key="InputBrush" Color="#F4F4F5"/>
            <SolidColorBrush x:Key="PrimaryBrush" Color="#18181B"/>
            <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="#FAFAFA"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#F4F4F5"/>
            <SolidColorBrush x:Key="VideoBlueBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="VideoBlueBgBrush" Color="#DBEAFE"/>
            <SolidColorBrush x:Key="ImageEmeraldBrush" Color="#10B981"/>
            <SolidColorBrush x:Key="ImageEmeraldBgBrush" Color="#D1FAE5"/>
            <SolidColorBrush x:Key="PrimaryBgBrush" Color="#F0F0F0"/>
            <SolidColorBrush x:Key="SuccessGreenBrush" Color="#22C55E"/>
            <SolidColorBrush x:Key="WarningOrangeBrush" Color="#F97316"/>
            <SolidColorBrush x:Key="WarningBgBrush" Color="#FFF7ED"/>
            <SolidColorBrush x:Key="WarningForegroundBrush" Color="#C2410C"/>
            
            <!-- ==================== æŒ‰é’®æ ·å¼ ==================== -->
            <Style x:Key="RoundedButtonStyle" TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="32"
                                    x:Name="border">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" 
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" 
                                            Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ==================== Converters ==================== -->
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter_Invert" IsInvert="True"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter_Invert" IsInvert="True"/>
            <conv:BoolToGreenRedConverter x:Key="BoolToGreenRedConverter"/>
            <conv:WorkflowStateToStringConverter x:Key="StateToStringConverter"/>
            <conv:SecondsToTimeStringConverter x:Key="SecondsToTimeStringConverter"/>
            <conv:ListToStringConverter x:Key="ListToStringConverter"/>
            <conv:ImageRoleToIndexConverter x:Key="ImageRoleToIndexConverter"/>
            <conv:EpisodeIndexToDisplayConverter x:Key="EpisodeIndexToDisplayConverter"/>
            
            <!-- ViewModel -->
            <vm:MainViewModel x:Key="MainViewModel"/>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="{StaticResource BackgroundBrush}">
        
        <!-- ==================== é¡¶éƒ¨ Header ==================== -->
        <Border DockPanel.Dock="Top" 
                Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Height="56">
            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- è¿”å›žæŒ‰é’® -->
                <Button Grid.Column="0" 
                        Command="{Binding BackCommand}"
                        Background="Transparent"
                        Foreground="{StaticResource ForegroundBrush}"
                        BorderThickness="0"
                        Padding="8,4"
                        Height="28"
                        Margin="0,0,8,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{StaticResource PrimaryBgBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="â†" FontSize="13" VerticalAlignment="Center"/>
                        <TextBlock Text="Back" FontSize="12" FontWeight="Medium" Margin="4,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- åˆ†éš”çº¿ -->
                <Border Grid.Column="1" Width="1" Height="20" 
                        Background="{StaticResource BorderBrush}" 
                        Margin="8,0"/>
                
                <!-- æ ‡é¢˜ -->
                <TextBlock Grid.Column="2" Text="Parse &amp; Match" 
                           Foreground="{StaticResource ForegroundBrush}" 
                           FontSize="15" FontWeight="SemiBold" 
                           VerticalAlignment="Center"/>
                
                <!-- Start Processing æŒ‰é’® -->
                <Button Grid.Column="3" 
                        Command="{Binding StartProcessingCommand}"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="{StaticResource PrimaryForegroundBrush}"
                        BorderThickness="0"
                        Padding="16,8"
                        FontSize="13"
                        FontWeight="500"
                        Height="36"
                        Cursor="Hand"
                        ToolTip="Start archiving process">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock Text="â–¶" FontSize="12"/>
                        <TextBlock Text="Start Processing"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ==================== ä¸»ä½“å†…å®¹åŒºåŸŸï¼ˆä¸‰æ å¸ƒå±€ï¼‰ ==================== -->
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <!-- å·¦ä¾§ï¼šå…ƒæ•°æ®é¢æ¿ -->
                <ColumnDefinition Width="320"/>
                <!-- ä¸­é—´ï¼šæ–‡ä»¶åˆ—è¡¨ -->
                <ColumnDefinition Width="260"/>
                <!-- å³ä¾§ï¼šé¢„è§ˆä¸ŽæŽ§åˆ¶ -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ==================== å·¦åˆ—ï¼šå…ƒæ•°æ®é¢æ¿ ==================== -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        
                        <!-- å…ƒæ•°æ®è¾“å…¥åŒºåŸŸ -->
