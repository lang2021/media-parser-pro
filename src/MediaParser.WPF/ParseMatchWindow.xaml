                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,0,8">
                                <TextBlock Text="Paste Metadata Text" 
                                           Foreground="{StaticResource MutedForegroundBrush}" 
                                               FontSize="12" FontWeight="Medium"/>
                                    <TextBlock x:Name="MetadataCharCount"
                                               Text="0 chars"
                                               Foreground="{StaticResource MutedForegroundBrush}" 
                                               FontSize="11"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBox Grid.Row="0"
                                             x:Name="MetadataInputBox"
                                             Text="{Binding MetadataText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Background="{StaticResource InputBrush}"
                                         Foreground="{StaticResource ForegroundBrush}"
                                         BorderThickness="0"
                                         Padding="8"
                                         FontSize="12"
                                             FontFamily="Consolas, Monaco, monospace"
                                         TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                             MinHeight="100"
                                             MaxHeight="200">
                                        <TextBox.ToolTip>
                                            <StackPanel MaxWidth="300">
                                                <TextBlock Text="æ”¯æŒæ ¼å¼ï¼š" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                                <TextBlock Text="â€¢ NFO æ–‡ä»¶å†…å®¹" Margin="8,0,0,2"/>
                                                <TextBlock Text="â€¢è±†ç“£/IMDb å…ƒæ•°æ®æ–‡æœ¬" Margin="8,0,0,2"/>
                                                <TextBlock Text="â€¢æ–‡ä»¶åè§£æž (SxxExxx)" Margin="8,0,0,2"/>
                                                <TextBlock Text="å¿«æ·é”®: Ctrl+Enter å¿«é€Ÿè§£æž" Foreground="{StaticResource PrimaryBrush}" Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </TextBox.ToolTip>
                                    </TextBox>
                                    
                                    <!-- è§£æžçŠ¶æ€æŒ‡ç¤ºå™¨ -->
                                    <StackPanel Grid.Row="1" 
                                               Orientation="Vertical" 
                                               Margin="0,8,0,0">
                                        <Border x:Name="ParseStatusIndicator"
                                                Background="{StaticResource SecondaryBrush}"
                                                CornerRadius="4"
                                                Padding="8,6"
                                                VerticalAlignment="Center">
                                            <TextBlock x:Name="ParseStatusText"
                                                       Text="Ready"
                                                       Foreground="{StaticResource MutedForegroundBrush}"
                                                       FontSize="11"/>
                                        </Border>
                                        
                                        <!-- è­¦å‘Šä¿¡æ¯ -->
                                        <Border Background="{StaticResource WarningBgBrush}"
                                                CornerRadius="4"
                                                Padding="8,6"
                                                Margin="0,4,0,0"
                                                Visibility="{Binding LastParseWarnings, Converter={StaticResource NullToVisibilityConverter}}">
                                            <TextBlock Text="{Binding LastParseWarnings}"
                                                       Foreground="{StaticResource WarningForegroundBrush}"
                                                       FontSize="10"
                                                       TextWrapping="Wrap"/>
                                        </Border>
                                        
                                        <!-- Media Type -->
                                        <TextBlock Text="Media Type:"
                                                   Foreground="{StaticResource MutedForegroundBrush}"
                                                   FontSize="12"
                                                   Margin="0,8,0,4"/>
