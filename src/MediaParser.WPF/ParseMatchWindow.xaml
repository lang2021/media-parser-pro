                                                                               Text="{Binding Number, StringFormat='E{0}'}" 
                                                                               Foreground="{StaticResource VideoBlueBrush}" 
                                                                               FontSize="12" FontWeight="SemiBold"
                                                                               VerticalAlignment="Center"/>
                                                                </Grid>
                                        
                                                                <!-- Title -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="Title:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                                             Text="{Binding Title, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                                <!-- Air Date (Aired) -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" Text="Air Date:" 
                                                       Foreground="{StaticResource MutedForegroundBrush}" 
                                                       FontSize="12" Width="70" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1" 
                                                                             Text="{Binding ReleaseDate, Mode=OneWay}"
                                                     Background="{StaticResource InputBrush}"
                                                     Foreground="{StaticResource ForegroundBrush}"
                                                     BorderThickness="0"
                                                     Padding="8,6"
                                                     FontSize="12"/>
                                        </Grid>
                                        
                                                                <!-- Plot (Description) -->
                                                                <TextBlock Text="Plot:" 
                                                   Foreground="{StaticResource MutedForegroundBrush}" 
                                                   FontSize="12" Margin="0,0,0,6"/>
                                        <TextBox Height="80" 
                                                                         Text="{Binding Summary, Mode=OneWay}"
                                                 Background="{StaticResource InputBrush}"
                                                 Foreground="{StaticResource ForegroundBrush}"
                                                 BorderThickness="0"
                                                 Padding="8"
                                                 FontSize="12"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,8"/>
                                        
                                                                <!-- Tags -->
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
