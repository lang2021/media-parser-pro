                                                    <DataTemplate>
                                                        <Border BorderBrush="{StaticResource BorderBrush}" 
                                                                BorderThickness="0,0,0,1"
                                                                Padding="0,8" Margin="0,4">
                                                            <StackPanel>
                                                                <!-- Episode Header -->
                                                                <Grid Margin="0,0,0,8">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0" 
